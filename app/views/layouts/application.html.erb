<!DOCTYPE html>
<html>
<head>
  <title>Learn Stuff</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.0.2/video.js"></script>
</head>
<body>
<div id="wrap">	
<nav class="navbar navbar-default" role="navigation">
  	<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
	      <%= link_to 'Chalkboard', root_path, class: "navbar-brand" %></li>
	    </div>
      
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
         <li><%= link_to 'See All Courses', courses_path %></li>
      	<% if user_signed_in? %>
        <li><%= link_to 'My Profile', dashboard_path  %></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
      	<% else %>
      	 <li><%= link_to 'Sign in', new_user_session_path  %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      	<% end %>
      </ul>
  	</div><!-- /.container-fluid -->
     </div>
</nav>	

<% if notice.present? %>
<p class="alert alert-info"><%= notice %></p>
<% end %>

<% if alert.present? %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</div> <!--Warp div-->

<br class="clear" />

<div id="footer">
    <div class="container">
      <div class="col-xs-6 col-sm-3">
        <br />
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>

      <div class="col-xs-6 col-sm-3">
        <br />
        <b>About</b>
        <br />
        <%= link_to 'Team', team_path %>
        <br />
        <%= link_to 'Careers', careers_path %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>

      <div class="col-xs-6 col-sm-3">
        <br />
        <b>Contact</b>
        <br />
        learnstuff@eureka.com
        <br />
        123 Knowledge Rd
        <br />
        Columbia, MD 21045
      </div>

      <div class="col-xs-6 col-sm-3 social">
        <br />
        <b>Social</b>
        <br />
        <%= link_to 'http://youtube.com/cacauzen' do %>
          <%= image_tag 'youtube.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'http://facebook.com/' do %>
          <%= image_tag 'facebook.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'http://twitter.com/cacauzen' do %>
          <%= image_tag 'youtube.png', class: 'social-button' %>
        <% end %>
      </div>
    </div>
  </div>

</body>
</html>
