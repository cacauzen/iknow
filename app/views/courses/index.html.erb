<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something New today</h1>
  <hr />

<% @courses.each do |course|%>
	<div class="col-xs-6 col-sm-4">
		<h3 class="text-left"><%= link_to course.title, course_path(course) %></h3>
		<br />
		<%= image_tag course.image, class: 'img-responsive' %>
		<br />
		<%= link_to 'Course Details', course_path(course), class: "btn btn-primary btn-large" %>
		<br />
		<br class="clear" />
	</div>

<% end %>

</div>
