<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

<% @courses.each do |course|%>
	<div class="col-sm-6">
		<h2 class="text-left"><%= link_to course.title, course_path(course) %></h2>
		<br />
		<%= course.description %>
		<br />
		<%= image_tag course.image, class: 'img-responsive' %>
		<br />
		<%= link_to 'tell me more', course_path(course), class: "btn btn-primary btn-large" %>
		<br class="clear" />
	</div>
<% end %>

</div>