<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <div class="text-center">
  	<%= link_to 'Preview as a Student', course_path(@course), class: "btn btn-default btn-lg" %>
  	<br class="clear" />
  	<%= link_to 'Add New Course Section', new_instructor_course_section_path(@course), class: "btn btn-warning btn-lg" %>
  </div>

  <ul>
  	<% @course.sections.each do |section| %>
  		<li>
  			<%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
        <br class="clear">
  		 <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>